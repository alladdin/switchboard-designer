{
  "name": "switchboard-designer",
  "version": "0.0.1",
  "description": "Electric switchboard designer",
  "scripts": {
    "start": "tsc && npm run sass && concurrently \"tsc -w\" \"lite-server --config bs-config.js\" \"npm run sass:w\"",
    "lint": "tslint ./app/**/*.ts -t verbose",
    "lite": "lite-server --config bs-config.js",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node-sass -r --include-path ./node_modules/@angular/material/ -r -o ./build_css/ ./scss/",
    "sass:w": "node-sass -r -w --include-path ./node_modules/@angular/material/ -r -o ./build_css/ ./scss/"
  },
  "author": "Ladislav Dokulil <alladdin@zemres.cz>",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.1.2",
    "@angular/common": "^4.1.2",
    "@angular/compiler": "^4.1.2",
    "@angular/compiler-cli": "^4.1.2",
    "@angular/core": "^4.1.2",
    "@angular/forms": "^4.1.2",
    "@angular/http": "^4.1.2",
    "@angular/material": "^2.0.0-beta.5",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "@angular/platform-server": "^4.1.2",
    "@angular/router": "^4.1.2",
    "angular-in-memory-web-api": "^0.3.2",
    "angular-l10n": "^3.2.1",
    "angular2-uuid": "^1.1.1",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "flag-icon-css": "^2.8.0",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "ng-inline-svg": "^3.2.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.0",
    "systemjs": "^0.20.12",
    "zone.js": "^0.8.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alladdin/switchboard-designer.git"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.41",
    "@types/jasmine": "^2.5.47",
    "@types/node": "^7.0.18",
    "canonical-path": "^0.0.2",
    "concurrently": "^3.4.0",
    "http-server": "^0.10.0",
    "lite-server": "^2.3.0",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  }
}
