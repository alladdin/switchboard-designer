{
  "name": "switchboard-designer",
  "version": "0.0.1",
  "description": "Electric switchboard designer",
  "scripts": {
    "start": "tsc && npm run sass && concurrently \"tsc -w\" \"lite-server --config bs-config.js\" \"npm run sass:w\"",
    "lint": "tslint ./app/**/*.ts -t verbose",
    "lite": "lite-server --config bs-config.js",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node-sass -r --include-path ./node_modules/@angular/material/core/theming/ -r -o ./build_css/ ./scss/",
    "sass:w": "node-sass -r -w --include-path ./node_modules/@angular/material/core/theming/ -r -o ./build_css/ ./scss/"
  },
  "author": "Ladislav Dokulil <alladdin@zemres.cz>",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^2.3.0",
    "@angular/compiler": "^2.3.0",
    "@angular/core": "^2.3.0",
    "@angular/forms": "^2.3.0",
    "@angular/http": "^2.3.0",
    "@angular/material": "^2.0.0-beta.2",
    "@angular/platform-browser": "^2.3.0",
    "@angular/platform-browser-dynamic": "^2.3.0",
    "@angular/router": "^3.1.1",
    "@angular/upgrade": "^2.3.0",
    "angular-in-memory-web-api": "~0.2.4",
    "angular-l10n": "^2.0.2",
    "angular2-uuid": "^1.1.0",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "flag-icon-css": "^2.8.0",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "ng-inline-svg": "^2.2.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.3",
    "systemjs": "0.20.2",
    "zone.js": "^0.7.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alladdin/switchboard-designer.git"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "lite-server": "^2.2.2",
    "typescript": "^2.0.3",
    "canonical-path": "0.0.2",
    "http-server": "^0.9.0",
    "tslint": "^4.4.2",
    "lodash": "^4.16.2",
    "@types/core-js": "^0.9.34",
    "@types/node": "^7.0.4",
    "@types/jasmine": "^2.5.35",
    "node-sass": "^4.3.0"
  }
}
